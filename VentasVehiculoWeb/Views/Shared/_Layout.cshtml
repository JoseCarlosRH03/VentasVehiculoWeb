<!DOCTYPE html>
<html lang="en" class="full-height">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Maxi Autos</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css">
    <link href="~/MDBootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="~/MDBootstrap/css/mdb.min.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="~/MDBootstrap/css/style.css" rel="stylesheet">
    <link href="~/MDBootstrap/css/cssProyect/NavBar.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="~/imgProyect/logoFavicon.png">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!--Main Navigation-->
    <header style="height: auto">
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark scrolling-navbar" style="height: auto">
            <a class="navbar-brand" href="#"><strong><img src="~/imgProyect/logo.png" class="img-fluid z-depth-1 rounded-circle" alt="Responsive image"></strong></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav mr-auto">
					@{
						string user = Convert.ToString(Session["UserName"]);

						if (@user != null && @user != "")
						{
							<li class="nav-item  ">
								@Html.ActionLink("Vehiculos", "Index", "Vehiculos", null, new { @class = "nav-link" })
							</li>
							<li class="nav-item">
								@Html.ActionLink("Clientes", "Index", "Clientes", null, new { @class = "nav-link" })
							</li>
							<li class="nav-item">
								@Html.ActionLink("Suplidores", "Index", "Suplidores", null, new { @class = "nav-link" })
							</li>
							<li class="nav-item">
								@Html.ActionLink("Ordenes", "Index", "Ordens", null, new { @class = "nav-link" })
							</li>

							<li class="nav-item  ">
								@Html.ActionLink("Log Out", "LoignOut", "Home", null, new { @class = "nav-link" })
							</li>

							<li class="nav-item">
								<a class=" nav-link ">Bienvenido: @user</a>
							</li>
						}
						else
						{
							<li class="nav-item  ">
								@Html.ActionLink("Vehiculos", "Index", "Vehiculos", null, new { @class = "nav-link" })
							</li>
							<li class="nav-item">
								@Html.ActionLink("Clientes", "Index", "Clientes", null, new { @class = "nav-link" })
							</li>
							<li class="nav-item">
								@Html.ActionLink("Suplidores", "Index", "Suplidores", null, new { @class = "nav-link" })
							</li>
							<li class="nav-item">
								@Html.ActionLink("Ordenes", "Index", "Ordens", null, new { @class = "nav-link" })
							</li>

							<li class="nav-item">
								@Html.ActionLink("Login In", "Usuarios", "Home", null, new { @class = "nav-link " })
							</li>

						}
					}
				</ul>
            </div>
        </nav>
        <div class="view intro-2">
            <br class="br" />
            <br class="br" />
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active ">
                        <img class="d-block w-100 img-fluid" src="~/imgProyect/foto1.jpg" alt="First slide ">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/imgProyect/foto2.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 " src="~/imgProyect/foto3.jpg" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 " src="~/imgProyect/foto4.jpg" alt="Fourth slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 " src="~/imgProyect/foto5.jpg" alt="Fifth slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </header>
    <!--Main Navigation-->
    <!--Main Layout-->
    <!-- Start your project here-->

    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            <div>Logo erstellt mit <a href="https://www.designevo.com/de/" title="Kostenloser Online-Logo-Editor">DesignEvo</a></div>
        </footer>
    </div>
    <!-- /Start your project here-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="~/MDBootstrap/js/popper.min.js"></script>
    <script type="text/javascript" src="~/MDBootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/MDBootstrap/js/mdb.min.js"></script>
    <script type="text/javascript" src=""></script>
    @RenderSection("scripts", required: false)
</body>
</html>
