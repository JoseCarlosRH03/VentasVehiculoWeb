@model  VentaVehiculoModelDB.Models.Usuario
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout2SinCarousel.cshtml";
}
<br />

<div class="container col-4">
	<div class="card card-container">
		<br />

		<h5 class="text-center">Login</h5>
		<hr class="col-md-11" />

		@using (Html.BeginForm("Validar", "Usuarios", FormMethod.Post, new { @class = "form-signin" }))
		{@Html.AntiForgeryToken()
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		<div class="md-form col-md-9 offset-1">
			<i class="fas fa-user-check prefix"></i>
			@Html.EditorFor(dl => dl.NombreUsuario, new { htmlAttributes = new { @class = "form-control", plaholder = "Usuario" } })
			@Html.ValidationMessageFor(dl => dl.NombreUsuario, "", new { @class = "text-danger" })
		</div>
		<div class="md-form col-md-9 offset-1">
			<i class="fas fa-key prefix"></i>
			@Html.EditorFor(dl => dl.PasswordUsuario, new { htmlAttributes = new { @class = "form-control", plaholder = "Password" } })
			@Html.ValidationMessageFor(dl => dl.PasswordUsuario, "", new { @class = "text-danger" })
		</div>

		if (!string.IsNullOrEmpty(ViewBag.Message))
		{
			<p class="ErrorMessage">@ViewBag.Message</p>
		}
			<div class="offset-1">
				<input type="submit" value="Login In" class="btn btn-primary" />
				@Html.ActionLink("Registrar", "Create", "Usuarios", new { @class = "btn btn-success" })
			</div>
		
		<br />
		<br />
	}


	</div>
</div>
