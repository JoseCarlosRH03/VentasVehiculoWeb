@model VentaVehiculoModelDB.Models.AsientosVehiculo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2SinCarousel.cshtml";
}

<div class="container card-body border border-light p-5 formulario z-depth-2 flex-center flex-column">
	<h2 class="text-center">Filas de Asientos</h2>

	<!--Layout = "~/Views/Shared/_Layout2SinCarousel.cshtml";  // poner en todos los formularios que tienes que editar para que no salga la imagen}-->

	<div class="container card-body border border-light p-5 formulario z-depth-2 flex-center flex-column">
		<h2 class="text-center">Filas de Asientos</h2><!--titulo-->


		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()
			<div>
				<div class="form-row">
					<!--oto cuerpo-->


					<h4>
						<br />Datos<!--otro titulo-->
					</h4>
					<hr class="col-md-12" /><!--linea del formulario-->
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })

					<div class="md-form col-md-5 ">
						<i class="fas fa-chair prefix"></i>
						@Html.EditorFor(model => model.CantidadAsiento, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.CantidadAsiento, "", new { @class = "text-danger " })
						@Html.LabelFor(model => model.CantidadAsiento, "Filas de Asientos", htmlAttributes: new { @class = "control-label col-md-8" })


					</div>


					<div class="row">
						<!--los botones-->
						<div class="col-12">
							<br />
							<br />
							<br />
							<br />
						</div>
						<div class="form-group row">

							<div class="col-md-offset-2 col-md-10">
								<input type="submit" value="Create" class="btn btn-success" />
							</div>
						</div>
						<div class="form-group col-md-5">
							@Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-primary" })
						</div>

					</div>
				</div>
			</div>
		}


		@section Scripts {
			@Scripts.Render("~/bundles/jqueryval")
		}
	</div>
</div>

