@model VentaVehiculoModelDB.Models.AsientosVehiculo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2SinCarousel.cshtml";
}

<div class="container card-body border border-light p-5 formulario z-depth-2 flex-center flex-column">
    <h2 class="text-center">Filas de Asientos</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-row">
        <h4>
            <br />Datos
        </h4>
        <hr class="col-md-12" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        <div class="md-form col-md-5 ">
            <i class="fas fa-chair prefix"></i>
            @Html.EditorFor(model => model.CantidadAsiento, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CantidadAsiento, "", new { @class = "text-danger " })
            @Html.LabelFor(model => model.CantidadAsiento, "Filas de Asientos" ,htmlAttributes: new { @class = "control-label col-md-8" })
        </div>

        <div class="row">
            <div class="col-12">
                <br />
                <br />
                <br />
                <br />
                <br />
            </div>
            <div class="form-group row">
                <div class="col-md-10">
                    <input type="submit" value="Crear" class="btn btn-default crear" />
                </div>
            </div>
            <div class="form-group col-md-5">
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    }

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
