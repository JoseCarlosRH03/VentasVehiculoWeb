@model IEnumerable<VentaVehiculoModelDB.Models.Empleado>

@{
	ViewBag.Title = "Index";
}

<h2>Listados de Empleados</h2>

@*Search O filter*@
<div class="row">
	<div class="col-sm-2">
		@Html.ActionLink("Create New", "Create", new { @Style = "margin-botton:10px" }, new { @class = "btn btn-success" })
	</div>
	<div class="col-lg-10">
		<input class="form-control" id="input_search" type="text" name="search" placeholder="busqueda" />
	</div>
</div>
<div class="row">
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Nombre)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Apellido)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Cedula)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.FechaRegistro)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Direccion)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Correo)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Genero)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Telefono)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Empleado1.Nombre)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Usuario.NombreUsuario)
				</th>
				<th>
					Acciones
				</th>
			</tr>
		</thead>
		<tbody id="table_body">
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Nombre)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Apellido)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Cedula)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.FechaRegistro)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Direccion)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Correo)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Genero)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Telefono)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Empleado1.Nombre)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Usuario.NombreUsuario)
					</td>
					<td>
						@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
						@Html.ActionLink("Details", "Details", new { id = item.ID }) |
						@Html.ActionLink("Delete", "Delete", new { id = item.ID })
					</td>
				</tr>
			}
		</tbody>


	</table>

</div>
@*Realiza la busqueda, en la tabla*@
@section scripts
	{
	<script>
		$(document).ready(function () {
			$("#input_search").on("keyup", function () {
				var value = $(this).val().toLowerCase();
				$("#table_body tr").filter(function () {
					$(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
				});
			});
		});
	</script>
}

